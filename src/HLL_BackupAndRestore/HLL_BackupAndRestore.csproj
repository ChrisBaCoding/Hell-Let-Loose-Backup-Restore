<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Basis-Einstellungen -->
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Publishing-Optionen -->
    <PublishSingleFile>true</PublishSingleFile>       <!-- eine einzige .exe -->
    <SelfContained>true</SelfContained>               <!-- .NET-Runtime wird eingebettet -->
    <PublishTrimmed>false</PublishTrimmed>            <!-- kein Trimming (WinForms & Reflection-sicher) -->
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <!-- optional: schnellerer Start, aber größere Datei -->
    <!-- <PublishReadyToRun>true</PublishReadyToRun> -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
  </ItemGroup>

</Project>